<%= render 'users/info', user: @user %>
<%= render 'books/new', book: @book %>

<h2>Books</h2>

<table>
  <thead>
   <tr>
     <th>Table</th>
     <th>Opinion</th>
   </tr>
  </thead>
  
  <tbody>

    <% @books.each do |book| %>
   <tr>
    <td><%= attachment_image_tag book.user, :profile_image, :fill, 30, 30,fallback: "no_image.jpg" %></td>
    <td><%=link_to book.title,"/books" %></td>
    <td><%= book.body %></td>
  </tr>
  
   
   <% end %>

 </tbody>
 </table>