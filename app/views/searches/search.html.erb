<div class="container">
  <div class="row">
    
<% if @model == 'user' %>
<h2>Users search for <strong class="text-info">"<%= @value %>"</strong></h2>
<table class="table">
  
  <thead>
    <tr>
    <th>image</th>
    <th>name</th>
    <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @data.each do |user| %>
    <tr>
    <td><%= attachment_image_tag user, :profile_image,fallback: "no_image.jpg",size:"40x40" %></td>
    <td><%= user.name %></td>
    <td><%= link_to "show",user_path(user.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<% elsif @model == 'book'%>

 <h2>Books search for "<%= @value %>"</h2>
<table class="table">
  
  <thead>
    <tr>
    <th>image</th>  
    <th>name</th>  
    <th>title</th>
    <th>opinion</th>
    <th colspan="2"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @data.each do |book| %>
    <tr>
    <td><%= attachment_image_tag book.user, :profile_image,fallback: "no_image.jpg",size:"40x40" %></td>  
    <td><%= book.user.name %></td>  
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "show",book_path(book.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<% end %>

</div>
</div>