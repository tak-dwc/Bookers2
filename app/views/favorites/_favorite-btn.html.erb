<% if @book.favorited_by?(current_user) %>
    <td ><%= link_to book_favorites_path(@book.id),method: :delete,remote: true do %>
        <p class="text-danger">♥ <%=@book.favorites.count %></p>
        <% end %>
    </td>
    <% else %>
    <td>
        <%= link_to book_favorites_path(@book.id),method: :post,remote: true do %>
        ♡ <%=@book.favorites.count %>
        <% end %>
    </td>
    <% end %>

