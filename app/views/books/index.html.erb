<div class="container">
  <%= render 'books/error', book: @book %>
<div class="row">
  <div class="col-md-3">
   <%= render 'users/info', user: @user %>
  <%= render 'books/new', book: @book %>
  </div>
<div class="col-md-8 offset-md-1">
  
<h2>Book</h2>

<table class="table table-hover table-inverse">
  <thead>
   <tr>
     <th></th>
     <th>Title</th>
     <th>Opinion</th>
     <th colspan="3"></th>
   </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
   <tr>
    <td></td>
    <td><%=link_to book.title,book_path(book.id) %></td>
    <td><%= book.body %></td>
   </tr>
   <% end %>

 </tbody>
</table>

</div>
</div>
</div>