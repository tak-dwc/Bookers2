<h1>User Info</h1>

<h1>New Book</h1>
  <%=form_with model:@book,url: "/books",local:true do |f| %>
  <h4>Title</h4>
  <%=f.text_field :title %>
  <h4>Opinion</h4>
  <%=f.text_area :body %><br>
  <%=f.submit'Create Book' %>
  
  <% end %>

<h1>Book</h1>

<table>
  <thead>
   <tr>
     <th>Table</th>
     <th>Opinion</th>
   </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
   <tr>
    <td><%=link_to book.title,"/books" %></td>
    <td><%= book.body %></td>
   </tr>
    <% end %>

 </tbody>
</table>
