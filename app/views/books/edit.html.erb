<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h1>Editing Book</h1>


<%=form_with model:@book,url: book_path(@book.id),local:true do |f| %>
<div class="form-group">
<lavel for=book_title>Title</lavel>
<%=f.text_field :title ,class:"form-control book_title"%>
</div>
<div class="form-group">
<lavel for=book_opinion>Opinion</lavel>
<%=f.text_area :body ,class:"form-control book_body"%>
</div>
<div class="form-group">
<%=f.submit'Update Book' ,class:"btn btn-success"%>
</div>
<% end %>

<span><%= link_to "Show",book_path(@book.id) %></span>
|
<span><%= link_to "Back","/books" %></span>

</div>
</div>
</div>