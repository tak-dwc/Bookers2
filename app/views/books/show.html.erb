<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info', user: @user %>
      <%= render 'books/new', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
     <h2>Book detail</h2>
     <table class="table">
      <tbody>
       <tr>
        <td>
          <%=link_to user_path(@user.id) do %>
          <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg",size:"40x40"%><br><%= @user.name %>
          <% end %>
        </td>
        <td><%=link_to @books.title,book_path(@books.id) %></td>
        <td><%= @books.body %></td>
        <td></td>
        <td>コメント数：<%= @books.book_comments.count %></td>
        <% if @books.user == current_user %>
        <td><%= link_to "Edit",edit_book_path(@books.id) ,class:"btn btn-sm btn-success"%></td>
        <td><%= link_to "Destroy",book_path(@books),method: :delete ,data:{confirm: "本当に消しますか?"},class:"btn btn-sm btn-danger" %></td>
        <% else %>
        <td></td>
        <td></td>
        <% end %>
      </tr>
     </table>
     <table>
      <% @books.book_comments.each do |book_comment| %>
      <tr>
      <td><%= attachment_image_tag book_comment.user, :profile_image, fallback: "no_image.jpg",size:"40x40"%></td>
      <td><%= book_comment.comment %></td>
      <% if book_comment.user == current_user %>
      <td><%= link_to "Destroy",book_book_comment_path(book_comment.book, book_comment),method: :delete %></td>
      <% else %>
      <rd></rd>
      <% end %>
      </tr>
      <% end %>
    </table>


       <%= form_with(model:[@books,@book_comment], local:true) do |f| %>
       <%= f.text_area :comment ,placeholder:"comment" ,rows:"5" ,cols:"90"%>
       <%= f.submit "送信" %>
       <% end %>

     </div>
  </div>
</div>
