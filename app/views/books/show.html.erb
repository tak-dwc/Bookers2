<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info', user: @user %> 
      <%= render 'books/new', book: @book %>
    </div>
 
    <div class="col-md-8 offset-md-1">
     <h2>Book detail</h2>
     <table class="table">
      <tbody>
       <tr>
        
        <td><%= @books.title %></td>
        <td><%= @books.body %></td>
        <% if@user.id == current_user.id %>
        <td><%= link_to "Edit",edit_book_path(@books.id) ,class:"btn btn-sm btn-success"%></td>
        <td><%= link_to "Destroy",book_path(@books),method: :delete ,class:"btn btn-sm btn-danger"%></td>
        <% else %>
        <td></td>
        <td></td>
        <% end %>
      </tr>
     </table>
</div>
</div>
</div>